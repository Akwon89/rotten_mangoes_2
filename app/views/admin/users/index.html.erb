<table>
  <tr>
    <th>ID</th>
    <th>Full Name</th>
    <th>Email</th>
    <th>Date Created</th>
    <th>Date Updated</th>
    <th>Admin</th>
    <th>Edit/Delete</th>
  </tr>
  <% @users.each do |user| %>
  <tr>
    <td><%= user.id %></td>
    <td><%= user.full_name %></td>
    <td><%= user.email %></td>
    <td><%= formatted_date(user.created_at) %></td>
    <td><%= formatted_date(user.updated_at) %></td>
    <td><%= user.admin %></td>
    <td>(<%= link_to "edit", edit_admin_user_path(user.id) %>, <%= link_to "delete", admin_user_path(user.id), method: :delete, data: {confirm: "You sure?"} %>)</td>
  </tr>
  <% end %>
</table>

<%= paginate @users %>

<%= link_to "Admin, add new user", new_admin_user_path %>

